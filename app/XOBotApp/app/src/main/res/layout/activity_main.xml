<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/java_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        opencv:camera_id="back"
        opencv:layout_constraintBottom_toTopOf="parent"
        opencv:layout_constraintEnd_toStartOf="parent"
        opencv:layout_constraintStart_toStartOf="parent"
        opencv:layout_constraintTop_toTopOf="parent"
        opencv:show_fps="true" />

    <com.jmedeisis.bugstick.Joystick
        android:id="@+id/joystick_tl"
        android:layout_width="@dimen/joystick_size"
        android:layout_height="@dimen/joystick_size"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/bg_base"
        opencv:layout_constraintStart_toStartOf="parent"
        opencv:layout_constraintTop_toBottomOf="@+id/text_arduino">

        <Button
            android:layout_width="@dimen/joystick_button_size"
            android:layout_height="@dimen/joystick_button_size"
            android:background="@drawable/bg_stick" />
    </com.jmedeisis.bugstick.Joystick>

    <com.jmedeisis.bugstick.Joystick
        android:id="@+id/joystick_tr"
        android:layout_width="@dimen/joystick_size"
        android:layout_height="@dimen/joystick_size"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_base"
        opencv:layout_constraintEnd_toEndOf="parent"
        opencv:layout_constraintTop_toBottomOf="@+id/text_arduino">

        <Button
            android:layout_width="@dimen/joystick_button_size"
            android:layout_height="@dimen/joystick_button_size"
            android:background="@drawable/bg_stick" />
    </com.jmedeisis.bugstick.Joystick>

    <com.jmedeisis.bugstick.Joystick
        android:id="@+id/joystick_bl"
        android:layout_width="@dimen/joystick_size"
        android:layout_height="@dimen/joystick_size"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/bg_base"
        opencv:layout_constraintBottom_toBottomOf="parent"
        opencv:layout_constraintStart_toStartOf="parent">

        <Button
            android:layout_width="@dimen/joystick_button_size"
            android:layout_height="@dimen/joystick_button_size"
            android:background="@drawable/bg_stick" />
    </com.jmedeisis.bugstick.Joystick>

    <com.jmedeisis.bugstick.Joystick
        android:id="@+id/joystick_br"
        android:layout_width="@dimen/joystick_size"
        android:layout_height="@dimen/joystick_size"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/bg_base"
        opencv:layout_constraintBottom_toBottomOf="parent"
        opencv:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="@dimen/joystick_button_size"
            android:layout_height="@dimen/joystick_button_size"
            android:background="@drawable/bg_stick" />
    </com.jmedeisis.bugstick.Joystick>

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/start"
        opencv:layout_constraintBottom_toBottomOf="parent"
        opencv:layout_constraintEnd_toStartOf="@+id/joystick_br"
        opencv:layout_constraintStart_toEndOf="@+id/joystick_bl" />

    <Switch
        android:id="@+id/switch_is_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:checked="true"
        android:text="@string/is_red"
        android:textColor="#FFFFFF"
        opencv:layout_constraintBottom_toTopOf="@+id/button_start"
        opencv:layout_constraintEnd_toStartOf="@+id/joystick_br"
        opencv:layout_constraintStart_toEndOf="@+id/joystick_bl" />

    <TextView
        android:id="@+id/prediction_text"
        android:layout_width="131dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="@string/prediction"
        android:textColor="#FFFFFF"
        opencv:layout_constraintEnd_toStartOf="@+id/joystick_tr"
        opencv:layout_constraintStart_toEndOf="@+id/joystick_tl"
        opencv:layout_constraintTop_toBottomOf="@+id/text_arduino" />

    <TextView
        android:id="@+id/text_arduino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/arduino_connection_status"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        opencv:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>